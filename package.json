{
  "name": "temu-assistant",
  "version": "1.0.0",
  "description": "TEMU小助手 - 便捷登录和功能扩展工具",
  "main": "main.js",
  "scripts": {
    "start": "chcp 65001 >nul & electron .",
    "dev": "chcp 65001 >nul & electron . --dev",
    "start:cross": "cross-env NODE_OPTIONS=\"--encoding=utf8\" electron .",
    "dev:cross": "cross-env NODE_OPTIONS=\"--encoding=utf8\" electron . --dev",
    "start:win": "chcp 65001 >nul & electron .",
    "dev:win": "chcp 65001 >nul & electron . --dev",
    "start:unix": "electron .",
    "dev:unix": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "temu",
    "assistant",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.temu.assistant",
    "productName": "TEMU小助手",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "cross-env": "^7.0.3"
  }
}
